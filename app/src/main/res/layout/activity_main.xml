<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<vip.mystery0.circleimageview.CircleImageView
		android:id="@+id/circleImageView"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:src="@drawable/ic_launcher_background"
		app:additional_height="8dp"
		app:additional_location="right_top"
		app:additional_margin_horizontal="2dp"
		app:additional_margin_vertical="2dp"
		app:additional_src="@color/colorAccent"
		app:additional_width="16dp"
		app:center_x="0.5"
		app:center_y="0.5"
		app:draw_additional="true"
		app:draw_border="true"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>